<%- include('./partials/header.ejs') %>
<body>
    <%- include('./partials/navbar.ejs') %>
    <div class="container">
        <hr>
        <h1><%= idPergunta.titulo %> </h1>
        <p><%= idPergunta.descricao %></p>
        <hr>
        <form method="POST" action="/responder">
            <h3>Responda</h3>
            <label>Resposta:</label>
            <textarea name="corpo" placeholder="Digite sua resposta" class="form-control"></textarea><br>
            <input type="hidden" name="pergunta" value="<%= idPergunta.id %>">
            <button type="submit" class="btn btn-primary">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta => {%>
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo %></p>
                </div>
            </div>            
        <% }) %>
    </div>
</body>
<%- include('./partials/footer.ejs') %>